<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/howManyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="How many socks are needed?"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/spidersText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="35dp"

        android:text="Spiders:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/howManyText"
        app:layout_constraintTop_toBottomOf="@+id/howManyText" />

    <EditText
        android:id="@+id/spidersAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/howManyText"
        app:layout_constraintStart_toEndOf="@+id/spidersText"
        app:layout_constraintTop_toTopOf="@+id/spidersText" />

    <TextView
        android:id="@+id/geeseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Geese:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/spidersText"
        app:layout_constraintHorizontal_bias="0.311"
        app:layout_constraintStart_toStartOf="@+id/spidersText"
        app:layout_constraintTop_toBottomOf="@+id/spidersText" />

    <EditText
        android:id="@+id/geeseAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/spidersAmount"
        app:layout_constraintStart_toStartOf="@+id/spidersAmount"
        app:layout_constraintTop_toTopOf="@+id/geeseText" />

    <TextView
        android:id="@+id/hamstersText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Hamsters:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/geeseText"
        app:layout_constraintHorizontal_bias="0.311"
        app:layout_constraintStart_toStartOf="@+id/geeseText"
        app:layout_constraintTop_toBottomOf="@+id/geeseText" />

    <EditText
        android:id="@+id/hamstersAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/geeseAmount"
        app:layout_constraintStart_toStartOf="@+id/geeseAmount"
        app:layout_constraintTop_toTopOf="@+id/hamstersText" />

    <TextView
        android:id="@+id/centipedesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Centipedes:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/hamstersText"
        app:layout_constraintHorizontal_bias="0.311"
        app:layout_constraintStart_toStartOf="@+id/hamstersText"
        app:layout_constraintTop_toBottomOf="@+id/hamstersText" />

    <EditText
        android:id="@+id/centipedesAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/hamstersAmount"
        app:layout_constraintStart_toStartOf="@+id/hamstersAmount"
        app:layout_constraintTop_toTopOf="@+id/centipedesText" />

    <Button
        android:id="@+id/button"
        android:layout_width="183dp"
        android:layout_height="65dp"
        android:layout_marginTop="35dp"
        android:text="Calculate Sock amount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/centipedesAmount" />

    <TextView
        android:id="@+id/totalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Total:"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <TextView
        android:id="@+id/totalAmountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text=""
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintStart_toEndOf="@+id/totalTextView"
        app:layout_constraintTop_toTopOf="@+id/totalTextView" />


</androidx.constraintlayout.widget.ConstraintLayout>